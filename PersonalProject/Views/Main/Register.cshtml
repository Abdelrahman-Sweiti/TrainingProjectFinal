@model PersonalProject.Models.DTOs.RegisterUserDTO

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<link rel="stylesheet" href="~/css/RegForm.css" />

