@{
    ViewData["Title"] = "Send Email";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<style>
    body {
        background-image: url(https://cdn.wallpapersafari.com/57/87/OU7NAl.jpg);
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
    }

    .glass-effect {
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.18);
        padding: 20px;
        border-radius: 10px;
        color: white; /* Set text color to white */
    }

        .glass-effect form {
            margin-bottom: 20px; /* Add margin at the bottom of the form */
        }

    h2 {
        text-align: center; /* Center align the h2 */
        font-weight: bold;
        margin-top: 50px; /* Add margin at the top of the h2 */
        color: white; /* Set text color to white */
    }

    .btn-send-email {
        display: block;
        margin: 20px auto 10px auto; /* Center the button and add margin at the top */
    }
</style>

<h2>Contact Us</h2>

<p>@ViewBag.Message</p>

<div class="container mt-5 glass-effect">
    <form method="post" class="glass-effect">
        <div class="form-group" style="display:none;">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" name="email" value="AbdelrahmanMaher.Sweit@yahoo.com" required>
        </div>

        <div class="form-group">
            <label for="subject">Subject:</label>
            <input type="text" class="form-control" id="subject" name="subject" required>
        </div>

        <div class="form-group">
            <label for="message">Message:</label>
            <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary btn-send-email">Send Email</button>
    </form>
</div>
