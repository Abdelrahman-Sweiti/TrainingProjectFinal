@model PersonalProject.Models.ProductsCategory

@{
    ViewData["Title"] = "AddCategoryToProduct";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<link rel="stylesheet" href="~/css/ProdToCategory.css" />


<div class="container mt-5 glass-effect">
    <h1 class="text-center">Add Category to Product</h1>
    <hr />

    <form asp-action="AddCategoryToProduct" method="post" enctype="multipart/form-data" class="glass-effect p-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <input hidden asp-for="ProductId" />
        </div>

        <div class="form-group">
            <label for="CategoryId">Category</label>
            <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                <option value="">Select a category</option>
            </select>
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>
