@model PersonalProject.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<link rel="stylesheet" href="~/css/AddProductCSS.css" />

<hr />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="border rounded p-4 border-dark" enctype="multipart/form-data" method="post">
                <h2 class="text-center">Create Product</h2>
                <hr>

                <div class="form-group">
                    <label for="inputProductName">Product Name</label>
                    <input asp-for="ProductName" class="form-control text-black" id="inputProductName" placeholder="Product Name">
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="inputPrice">Price</label>
                    <input asp-for="Price" class="form-control" id="inputPrice" placeholder="Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="file" >Upload Image:</label>
                    <input type="file" id="file" name="file" class="form-control">
                </div>

                <div class="form-group mb-3">
                    <label for="inputDescription">Description</label>
                    <textarea asp-for="Description" class="form-control" id="inputDescription" placeholder="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-outline-primary">Create</button>
                    <a asp-controller="Products" asp-action="ViewAllProducts" class="btn btn-outline-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
