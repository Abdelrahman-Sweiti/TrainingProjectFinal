@model PersonalProject.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<link rel="stylesheet" href="~/css/ProdDelete.css" />


<div class="container mt-5">
    <h1 class="text-center">Delete Product</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6 glass-effect p-4">
            <h3 class="text-center">Are you sure you want to delete this Product?</h3>

            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        <strong>@Html.DisplayNameFor(model => model.ProductName)</strong>
                    </dt>
                    <dd class="col-sm-8">
                        <span>@Html.DisplayFor(model => model.ProductName)</span>
                    </dd>
                    <dt class="col-sm-4">
                        <strong>@Html.DisplayNameFor(model => model.Price)</strong>
                    </dt>
                    <dd class="col-sm-8">
                        <span>@Html.DisplayFor(model => model.Price)</span>
                    </dd>
                    <dt class="col-sm-4">
                        <strong>@Html.DisplayNameFor(model => model.Description)</strong>
                    </dt>
                    <dd class="col-sm-8">
                        <span>@Html.DisplayFor(model => model.Description)</span>
                    </dd>
                    <dt class="col-sm-4">
                        <strong>@Html.DisplayNameFor(model => model.ImageUri)</strong>
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.ImageUri != null)
                        {
                            <img src="@Model.ImageUri" alt="@Model.ProductName" class="img-thumbnail" width="250" height="250" />
                        }
                        else
                        {
                            <p>No Image Available</p>
                        }
                    </dd>
                </dl>

                <form asp-action="Delete" class="text-center mt-3">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-outline-danger">Delete</button> |
                    <a asp-controller="Products" asp-action="ViewAllProducts" class="btn btn-outline-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
