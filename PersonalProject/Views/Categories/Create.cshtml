@model PersonalProject.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<link rel="stylesheet" href="~/css/CreateCategory.css" /> 
<div class="container mt-5 ">
    <div class="row justify-content-center">
        <div class="col-md-6 glass-effect p-4">
            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <h2 class="text-center">Create Category</h2>
                <hr>

                <div class="form-group">
                    <label for="inputCategoryName">Category Name</label>
                    <input asp-for="Name" class="form-control" id="inputCategoryName" placeholder="Category Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label for="file">Upload Image:</label>
                    <input type="file" id="file" name="file" class="form-control">
                </div>


                <div class="form-group mb-3">
                    <label for="inputDescription">Description</label>
                    <textarea asp-for="Description" class="form-control" id="inputDescription" placeholder="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>


                <div class="form-group text-center mt-3">
                    <button type="submit" class="btn btn-outline-primary">Create</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
